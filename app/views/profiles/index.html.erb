<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Display name</th>
      <th>Hometown</th>
      <th>Phone number</th>
      <th>Whatsapp</th>
      <th>Facebook</th>
      <th>Instagram</th>
      <th>Birthday</th>
      <th>Website</th>
      <th>Snapchat</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.email %></td>
        <td><%= profile.display_name %></td>
        <td><%= profile.hometown %></td>
        <td><%= profile.phone_number %></td>
        <td><%= profile.whatsapp %></td>
        <td><%= profile.facebook %></td>
        <td><%= profile.instagram %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.website %></td>
        <td><%= profile.snapchat %></td>
        <td><%= profile.bio %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
