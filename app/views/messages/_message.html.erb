<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-2">
        <%=image_tag message.user.gravitar_url %>
      </div>
      <div class="col-md-10">
        <p class="card-text">
          <span class="text-muted"><%= message.user.name %> at <%= message.timestamp %> says</span><br>
          <%= auto_html(message.body.html_safe){ image(:width => '100%'); youtube(:width => 400, :height => 250, :autoplay => false); simple_format; link(:target => 'blank') } %>
        </p>
      </div>
    </div>
  </div>
</div>
