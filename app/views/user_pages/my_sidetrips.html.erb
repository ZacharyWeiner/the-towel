<div >
<div class='row'>
  <ul>
    <% @sidetrips.each  do |sidetrip| %>
      <li class='list-group-item list-group-item-action'>
        <div class='row'>
          <div class='col-md-2'>
            <small>
              <%= sidetrip.start_date %>
              <br>
              <%= sidetrip.end_date %>
            </small>
          </div>
          <div class='col-md-2'>
            <h4> <%= sidetrip.title %> </h4>
          </div>
          <div class='col-md-6'>
            <p> <%= sidetrip.description %> </p>
          </div>
          <div class='col-md-2'>
            <%= link_to "View", side_trip_path(sidetrip), class: 'btn btn-primary' %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
</div>
