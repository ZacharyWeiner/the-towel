<%= @cohort.name%>
<ul>
<% @itinerary_items.each  do |ii| %>
  <li class='list-group-item list-group-item-action'>
  <div class='row'>
    <div class='col-md-3'>
      <%= ii.date.to_time.strftime('%a %b %e %Y') %>
      <% unless ii.time.nil? %>
         <%= ii.time.to_short %>
      <% end %>
    </div>
    <div class='col-md-6'>
      <h6> <%= ii.title %> || <%= ii.location %> </h6>
      <h6> <%= ii.description %> </h6>
    </div>
    <div class='col-md-3'>
      <%= link_to "View Details", ii.link, class: 'btn btn-primary' %>
      <span class="addtocalendar atc-style-blue">
        <var class="atc_event">
            <var class="atc_date_start" style='visibility: hidden;'><%=ii.date.to_time %></var>
            <var class="atc_date_end" style='visibility: hidden;'><%=ii.date.to_time %></var>
            <var class="atc_timezone" style='visibility: hidden;'>
              Pacific/Midway
            </var>
            <var class="atc_title" style='visibility: hidden;'>Star Wars Day Party</var>
            <var class="atc_description" style='visibility: hidden;'>May the force be with you</var>
            <var class="atc_location" style='visibility: hidden;'>Tatooine</var>
            <var class="atc_organizer" style='visibility: hidden;'>Luke Skywalker</var>
            <var class="atc_organizer_email" style='visibility: hidden;'>luke@starwars.com</var>
        </var>
    </span>
    </div>
  </div>
  </li>
<% end %>
