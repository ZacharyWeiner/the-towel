<% @new_messages = current_user.new_messages %>
<% @new_messages_count = @new_messages.count%>
<li class="dropdown messages-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-envelope-o"></i>
    <span class="label label-success"><%= @new_messages_count %></span>
  </a>
  <ul class="dropdown-menu">
    <li class="header">
      You have <%= @new_messages_count%> messages
    </li>
    <li>
    <!-- inner menu: contains the actual data -->
      <ul class="menu">
        <% @new_messages.each do |message | %>
          <li><!-- start message -->
            <%= link_to conversation_mails_path(message.conversation, message) do%>
              <div class="pull-left">
                <%= image_tag message.user.gravitar_url%>
              </div>
              <h4>
                <%= message.user.email %>
                <small><i class="fa fa-clock-o"></i> 5 mins</small>
              </h4>
              <p><%= message.body.truncate(30) %></p>
            <% end %>
          </li>
        <% end %>
        <!-- end message -->
        </ul>
    </li>
    <li class="footer"><%= link_to "See All Messages", conversations_path %> </a></li>
  </ul>
</li>
