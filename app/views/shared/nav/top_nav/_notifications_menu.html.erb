
<li class="dropdown tasks-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-flag-o"></i>
    <% if current_user.new_notifications.count != 0 %>
    <span class="label label-danger"><%= current_user.new_notifications.count %></span>
    <% end %>
  </a>
  <ul class="dropdown-menu">
    <li class="header">You have <%= current_user.new_notifications.count %> new notifications</li>
    <li>
      <!-- inner menu: contains the actual data -->
      <ul class="menu">
        <%current_user.new_notifications.each do |notification| %>
          <li>
            <% if notification.notification_type == "Chat" %>
              <% chat_room = ChatRoom.find(notification.notification_obeject_id) %>
              <%= link_to chat_room  do %>
                <%= chat_room.title %> Has A New Message
              <% end %>
            <% elsif notification.notification_type == "Event" %>
              <% event = Event.find(notification.notification_obeject_id)%>
              <%= link_to event_path(event) do %>
                <%= event.title %> was created in <%= event.cohort.name%>
              <% end %>
            <% elsif notification.notification_type == "Side Trip" %>
              <% side_trip = SideTrip.find(notification.notification_obeject_id)%>
              <% cohort = Cohort.find(side_trip.cohort.id) %>
              <%= link_to cohort_side_trip_path(cohort, side_trip) do %>
                New Side Trip in <%= side_trip.cohort.name%>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </li>
    <li class="footer">
      <%= link_to "View all Notifications", notifications_path %>
    </li>
  </ul>
</li>
