
<li class="dropdown tasks-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-flag-o"></i>
    <% if current_user.new_notifications.count != 0 %>
    <span class="label label-danger"><%= current_user.new_notifications.count %></span>
    <% end %>
  </a>
  <ul class="dropdown-menu">
    <li class="header">You have <%= current_user.new_notifications.count %> new notifications</li>
    <li>
      <!-- inner menu: contains the actual data -->
      <ul class="menu">
        <%= render current_user.new_notifications %>
      </ul>
    </li>
    <li class="footer">
      <%= link_to "View all Notifications", notifications_path %>
    </li>
  </ul>
</li>
