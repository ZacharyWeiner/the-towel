<div class="col-xs-12">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Skills (Check All That Apply) </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>Check</th>
            <th>Skill</th>
          </tr>
          <%= form_tag("/users/#{current_user.id}/skills", method: "post") do %>
            <% Tag.skills.each do |tag| %>
              <tr>
                <td>
                  <% if current_user.tags.where(id: tag.id).count > 0 %>
                    <%= check_box_tag(tag.name, tag.name, true) %>
                  <% else %>
                    <%= check_box_tag(tag.name, tag.name) %>
                  <% end %>
                </td>
                <td>
                  <%= tag.name%>
                </td>
              </tr>
            <% end %>
            <%= submit_tag("Update Skills") %>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>
