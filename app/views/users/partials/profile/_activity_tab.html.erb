<div class="tab-pane active" id="activity">
<% @user.posts.reverse.each do |post| %>
  <!-- Post -->
  <div class="post">
    <div class="user-block">
      <img class="img-circle img-bordered-sm" src="<%= @user.gravitar_url %>" alt="user image">
          <span class="username">
            <a href="#"><%= @user.safe_name%></a>
            <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
          </span>
      <span class="description">Posted To: <%= post.posted_to%> - <%= time_ago_in_words(post.created_at) %> ago</span>
    </div>
    <!-- /.user-block -->
    <div style='padding-left:12px'>
       <%= auto_html(post.content.html_safe){ image(:width => '100%'); youtube(:width => '100%', :height => 250, :autoplay => false); simple_format; link(:target => 'blank') } %>
      </div>
