<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Travel Plans</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody><tr>
            <th>Date</th>
            <th>Title</th>
            <th>Departure Location</th>
            <th>Manage</th>
          </tr>
          <% @cohort.transits.each do |transit| %>
            <tr>
              <td><%= transit.date.to_time.strftime('%b %d `%y')  %></td>
              <td><%= transit.title %> </td>
              <td><%= transit.departure_location.name %></td>
              <td><%= link_to "Manage",   edit_transit_path(transit) %></td>
            </tr>
          <% end %>
        </tbody></table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
