<div class='row'>
  <div class='col-md-6'>
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Units</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding">
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>Name</th>
            </tr>
            <% @units.each do |unit| %>
            <tr>
              <td>
                <%= link_to admin_housing_unit_path(unit) do %>
                  <%= unit.name %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Members</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding">
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>Name</th>
              <th>Status</th>
            </tr>
             <% @users.each do |user|%>
            <tr>
              <td>
               <%= user.safe_name %>
              </td>
              <td>
                <% if user.has_housing_in_location(@location) %>
                  <span class="label label-success">Assigned</span>
                <% else %>
                  <span class="label label-warning">Unassigned</span>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>





