
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Members</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <tbody><tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @cohort.users.each do |user| %>
      <tr>
        <td><img class="img-circle img-bordered-sm" src="<%= user.gravitar_url %>" alt="user image"></td>
        <td> <%= user.safe_name%></td>
        <td>
          <%= link_to "View", show_user_path(user), class: 'btn btn-primary' %>
        </td>
        <td>
          <%= link_to "Message", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: 'btn btn-success'%>
        </td>
      </tr>
      <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
</div>
