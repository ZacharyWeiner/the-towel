 <section class="discussions">
<div class="discussion search">
    <div class="searchbar">
      <%= link_to "< Back To Site", root_path %>
    </div>
  </div>
  <% current_user.chat_rooms.each do |room| %>
    <div class="discussion message-active">
      <div class="photo" style='background-image: url("<%= room.messages.last.user.gravitar_url unless room.messages.last.nil? %>");'>
        <div class="online"></div>
      </div>
      <div class="desc-contact">
        <p class="name"><%= link_to room.title, chat_room_path(room) %></p>
        <p class="message"><%= room.messages.last.body unless room.messages.last.nil? %></p>
      </div>
      <div class="timer"><%= time_ago_in_words(room.messages.last.created_at) unless room.messages.last.nil? %> ago</div>
    </div>
  <% end %>
 </section>
