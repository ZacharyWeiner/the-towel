<div class="jumbotron jumbotron-fluid" >
  <div class="container" style='color:white'>
    <div class='row'>
      <div class='col-md-3'></div>
      <div class='col-md-6'>
      <h1><%= @chat_room.title %></h1>
      <div class='col-md-3'></div>
    </div>
  </div>
  </div>
  </div>

<div class='container'>
<div class='row'>
  <%= link_to "Leave Room", chat_room_leave_room_path(@chat_room), class: 'btn btn-warning' %>
</div>
<div class='row'>
  <div class="col-md-3">
    <%= render 'chat_rooms/partials/my_chat_rooms' %>
  </div>
  <div class="col-md-9">

    <div id="messages" data-chat-room-id="<%= @chat_room.id %>" style='max-height:400px'>
      <%= render @chat_room.messages %>
    </div>
    <div class='container'>
      <%= form_for @message, url: chat_room_message_path(@chat_room) do |f| %>
      <div class="form-group"'>
        <%= f.text_area :body, class: 'form-control', placeholder: 'Enter a Message From 2 to 1000 characters', rows: 4, style: 'margin-top:12px' %>
      </div>
      <%= f.submit "Post", id:'new_message', class: 'btn btn-primary btn-lg' %>
    <% end %>
    </div>
  </div>
</div>

</div>
<script type="text/javascript">
  var mydiv = $("#messages");
  mydiv.scrollTop(mydiv.prop("scrollHeight"));
</script>
