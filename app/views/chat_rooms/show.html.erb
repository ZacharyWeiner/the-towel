<div class='container'>
  <div class='row'>
      <%= render 'chat_rooms/partials/my_chat_rooms' %>
      <section class="chat">
      <div class="header-chat">
          <i class="icon fa fa-user-o" aria-hidden="true"></i>
          <p class="name"><%= @chat_room.title %></p>
          <%= link_to chat_room_leave_room_path(@chat_room) do  %>
            <i class="icon clickable fa fa-times right danger" aria-hidden="true"></i>
          <% end %>
        </div>
        <div id="messages" class='messages-chat' data-chat-room-id="<%= @chat_room.id %>" style='max-height:400px'>
          <%= render @chat_room.messages %>
        </div>

      <%= form_for @message, url: chat_room_message_path(@chat_room) do |f| %>
        <div class="footer-chat">
          <%= f.text_area :body, class: 'write-message', placeholder: 'Enter a Message From 2 to 1000 characters'%>
            <br/>
          <%= f.submit 'Send', id:'new_message', class: 'icon send fa fa-paper-plane-o clickable' %>
        </div>
      <% end %>
      </section>
    </div>
  </div>
</div>
<script type="text/javascript">
  var mydiv = $("#messages");
  mydiv.scrollTop(mydiv.prop("scrollHeight"));
</script>
