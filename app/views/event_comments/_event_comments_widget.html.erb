<div class='container'>

<% @event.event_comments.each do |comment| %>
<div class='row' >
<div class="card" style='width:100%'>
  <div class="card-header text-left">
    <%= image_tag comment.user.gravitar_url, style: 'max-height:20px' %><%= link_to "#{comment.user.email}", show_user_path(comment.user) %> 
  </div>
  <div class="card-block">
    <p class="card-text"> 
      <div class='post-container' ><%= auto_html(comment.comment.html_safe){ image(:width => '100%'); youtube(:width => 400, :height => 250, :autoplay => false); simple_format; link(:target => 'blank') } %> 
    </div>
    </p>
  </div>
</div>
</div>
<% end %>

</div>