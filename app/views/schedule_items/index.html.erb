<div class="jumbotron jumbotron-fluid" >
  <div class="container" style='color:white'>
    <div class='row'>
      <div class='col-md-3'></div>
      <div class='col-md-6'>
      <h1>Schedule Items</h1>
      <div class='col-md-3'></div>
    </div>
  </div>
  </div>
  </div>
<div class='container'>

    <ul width='100%'>
      <% @schedule_items.each do |schedule_item| %>
        <li class='list-group-item list-group-item-action'>
          <div class='row'>
            <div class='col-md-3'>
               <%= schedule_item.arrival_date.to_time.strftime('%a %b %e %Y') %>
               -
               <%= schedule_item.departure_date.to_time.strftime('%a %b %e %Y') %>
            </div>
            <div class='col-md-6'>
              <h4> <%= schedule_item.location.name %> </h4>
            </div>
            <div class='col-md-3'>
              <%= link_to "Edit", edit_cohort_schedule_item_path(@cohort, schedule_item) %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

</div>

