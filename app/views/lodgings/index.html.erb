<div class='container'>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Accomodations</h3>

    <div class="box-tools">
      <% if params[:side_trip_id] %>
        <%= link_to 'Add Stay', new_side_trip_lodging_path(@side_trip) %>
      <% else %>
        <%= link_to 'New Lodging', new_lodging_path %>
      <% end %>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tbody>
      <tr>
        <th>Checkin date</th>
        <th>Checkin time</th>
        <th>Checkout date</th>
        <th>Checkout time</th>
        <th>Phone</th>
        <th>Website</th>
        <th>Address</th>
        <th>Location</th>
        <th>Map</th>
        <th colspan="3"></th>
      </tr>
       <% @lodgings.each do |lodging| %>
        <tr>
          <td><%= lodging.checkin_date %></td>
          <td><%= lodging.checkin_time %></td>
          <td><%= lodging.checkout_date %></td>
          <td><%= lodging.checkout_time %></td>
          <td><%= lodging.phone %></td>
          <td><%= lodging.website %></td>
          <td><%= lodging.address %></td>
          <td><%= lodging.location.name %></td>
          <td><%= lodging.map %></td>
          <td><%= link_to 'Show', side_trip_lodging_path(params[:side_trip_id], lodging) %></td>
          <td><%= link_to 'Edit', edit_lodging_path(lodging) %></td>
          <td><%= link_to 'Destroy', lodging, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
  <!-- /.box-body -->
</div>
</div>
