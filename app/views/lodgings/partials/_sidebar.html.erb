<!-- Profile Image -->
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @lodging.name %></h3>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>Phone</b> <a class="pull-right"><%= @lodging.phone %></a>
          </li>
          <li class="list-group-item">
            <b>Location</b> <a class="pull-right"><%= @lodging.location.name %></a>
          </li>
        </ul>
        <%= link_to "Website", @lodging.website, class: 'btn btn-primary btn-block' %>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->

    <!-- About Me Box -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Time</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <strong><i class="fa fa-book margin-r-5"></i> Check In</strong>
        <p class="text-muted">
         <%= @lodging.checkin_date %> - <%= @lodging.checkin_time %>
        </p>
        <hr>
        <strong><i class="fa fa-map-marker margin-r-5"></i> Check Out</strong>
        <p class="text-muted"><%= @lodging.checkout_date %> -  <%= @lodging.checkout_time %></p>
        <hr>
        <strong><i class="fa fa-file-text-o margin-r-5"></i> Address</strong>
        <p><%= @lodging.address %></p>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
