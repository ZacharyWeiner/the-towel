<% if params[:cohort_id]%>
<%= link_to 'Add A Side Trip', new_cohort_side_trip_path(Cohort.find(params[:cohort_id])) %>
<% else %>
<%= link_to 'Add A Side Trip', new_side_trip_path %>
<% end %>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Side Trips</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <tbody><tr>
        <th>Title</th>
        <th>Start Date</th>
        <th >End Date</th>
        <th >View</th>
      </tr>
      <% @side_trips.each do |side_trip| %>
      <tr>
        <td><%= side_trip.title %></td>
        <td><%= side_trip.start_date.to_time.strftime('%b %d `%y') %></td>
        <td><%= side_trip.end_date.to_time.strftime('%b %d `%y') %></td>
        <td><%= link_to "View", side_trip %> </td>
      </tr>
      <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
</div>
