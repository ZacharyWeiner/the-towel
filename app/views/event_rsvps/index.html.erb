<p id="notice"><%= notice %></p>

<h1>Event Rsvps</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_rsvps.each do |event_rsvp| %>
      <tr>
        <td><%= event_rsvp.event %></td>
        <td><%= event_rsvp.user %></td>
        <td><%= event_rsvp.note %></td>
        <td><%= link_to 'Show', event_rsvp %></td>
        <td><%= link_to 'Edit', edit_event_rsvp_path(event_rsvp) %></td>
        <td><%= link_to 'Destroy', event_rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

